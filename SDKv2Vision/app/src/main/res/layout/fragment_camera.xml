<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.camera">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Camera" />
        <TextView
            android:id="@+id/resultText"
            android:layout_width="208dp"
            android:layout_height="109dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:background="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/previewCam"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/previewCam"
            android:layout_width="365dp"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />


        <Button
            android:id="@+id/buttonStart"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="184dp"
            android:text="Start Camera"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:text="Stop Camera"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart" />

        <Button
            android:id="@+id/buttonGetStatus"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="140dp"
            android:text="Get Status"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart" />

        <CheckBox
            android:id="@+id/displayChckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginTop="72dp"
            android:text="Display Camera"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>