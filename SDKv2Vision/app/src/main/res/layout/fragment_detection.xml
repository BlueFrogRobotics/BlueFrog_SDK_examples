<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.detection">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Detection" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="208dp"
            android:layout_height="109dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:background="#FFFFFF"
            android:text=""
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/previewCam"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/previewCam"
            android:layout_width="365dp"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="240dp"
            android:text="April Tag"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/buttonPose"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Pose"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="128dp"
            android:text="Human"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toTopOf="@+id/buttonStart" />

        <Button
            android:id="@+id/buttonGetTopk"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="252dp"
            android:text="Face"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toTopOf="@+id/buttonStart" />

        <Button
            android:id="@+id/buttonColor"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart"
            android:layout_marginStart="376dp"
            android:text="Color"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStart"
            app:layout_constraintTop_toTopOf="@+id/buttonStart" />

        <EditText
            android:id="@+id/thresTextView"
            android:layout_width="113dp"
            android:layout_height="53dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0.7"
            app:layout_constraintStart_toStartOf="@+id/buttonStop"
            app:layout_constraintTop_toBottomOf="@+id/buttonStop"
            tools:text="0.7" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Thres"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/buttonStop"
            app:layout_constraintTop_toBottomOf="@+id/buttonStop" />

        <RadioGroup
            android:id="@+id/cameraRadioGroup"
            android:layout_width="128dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/previewCam"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/previewCam"
            app:layout_constraintTop_toBottomOf="@+id/previewCam">

            <!--adding a radio button -->

            <!--adding a radio button -->

            <RadioButton
                android:id="@+id/wideAngleRB"
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:checked="true"
                android:padding="1dp"
                android:text="Wide Angle"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/zoomRB"
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:checked="false"
                android:padding="4dp"
                android:text="Zoom"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="475dp"
                tools:layout_editor_absoluteY="237dp" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>